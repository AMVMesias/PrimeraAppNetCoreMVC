<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimeraAppNetCoreMVC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrimeraAppNetCoreMVC.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Add a reference to your sidebar CSS file -->
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
</head>
<body>
    <!-- Replace the header with your new sidebar navigation -->
    <header class="banner" id="mainHeader" role="banner">
        <nav role="navigation">
            <div class="top-header">
                <div class="navBurger">
                    <div class="burger"></div>
                </div>
            </div>

            <ul id="menu-vertical-menu" class="nav">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li><a asp-area="" asp-controller="TipoMedicamento" asp-action="TipoMedicamento">Tipo Medicamento</a></li>
                <li><a asp-area="" asp-controller="Sucursal" asp-action="Sucursal">Sucursal</a></li>
                <li><a asp-area="" asp-controller="Guardar" asp-action="Index">Guardar</a></li>
                <li><a asp-area="" asp-controller="Laboratorio" asp-action="Laboratorio">Laboratorio</a></li>
            </ul>
        </nav>
    </header>

    <input type="hidden" id="hdfOculto" value="@Url.Content("~")" />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PrimeraAppNetCoreMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>